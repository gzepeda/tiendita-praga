<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TienditaDePraga.NewProductoPage"
             		Title="Nuevo Producto">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Guardar" Clicked="Save_Clicked" />
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout Spacing="20" Padding="15">
            <Label Text="Nombre" FontSize="Medium" />
            <Entry Text="{Binding Item.Nombre}" FontSize="Small" />
            <Label Text="Descripción" FontSize="Medium" />
            <Entry Text="{Binding Item.Descripcion}" FontSize="Small" />
            <Label Text="Costo unitario" FontSize="Medium" />
            <Entry Text="{Binding Item.CostoUnitario}" FontSize="Small" />
            <Label Text="Precio base" FontSize="Medium" />
            <Entry Text="{Binding Item.PrecioBase}" FontSize="Small" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>